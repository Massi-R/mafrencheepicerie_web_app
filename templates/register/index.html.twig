{% extends 'base.html.twig' %}

{% block title %}
    Page d'inscription
{% endblock %}

{% block content %}
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card shadow p-4 rounded">
            <h1 class="text-center mb-4">Inscription</h1>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'row g-3'}}) }}

            <div class="mb-3">
                {{ form_label(form.firstName, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lastname) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="d-grid">
                {{ form_widget(form.submit, {'label': 'S\'inscrire', 'attr': {'class': 'btn btn-primary'}}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
