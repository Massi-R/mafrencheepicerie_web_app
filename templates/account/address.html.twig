{% extends 'base.html.twig' %}

{% block title %}
    Mes adresses - Ma French Epicerie !
{% endblock %}

{% block content %}
    <div class="container-fluid d-grid min-vh-100 w-75 mt-5">

        <div class="card shadow p-4 rounded">
            <h2 class="mb-4">Mes adresses</h2>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a href="{{ path('app_account') }}" class="d-block">Retour</a>
                <a href="{{ path('app_account_address_add') }}" class="btn btn-info btn-sm">Ajouter une adresse</a>
            </div>

            {% if app.user.addresses | length == 0 %}
                <h6 class="text-center">Vous n'avez pas encore ajouté d'adresse dans votre compte. Pour en ajouter une, veuillez <a href="{{ path('app_account_address_add') }}">cliquer ici</a>.</h6>
            {% else %}
                <div class="row justify-content-center mt-3">
                    {% for address in app.user.addresses %}
                        <div class="col-md-4">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h5 class="card-title">{{ address.name }}</h5>
                                    <p class="card-text">{{ address.address }}<br>
                                        {{ address.postal }} - {{ address.city }} - {{ address.country }}</p>
                                    <div class="d-block">
                                        <a href="{{ path('app_account_address_edit', { 'id': address.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                                        <a href="{{ path('app_account_address_delete', { 'id': address.id }) }}" class="btn btn-danger btn-sm">Supprimer</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div> <!-- Fermer la div après la boucle for -->
            {% endif %}
        </div>
    </div>
{% endblock %}
