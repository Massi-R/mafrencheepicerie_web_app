{% extends 'base.html.twig' %}

{% block title %}
    Connexion compte!
{% endblock %}

{% block content %}
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card shadow p-4 rounded w-25">
            <form method="post" class="row g-3">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous à votre compte</h1>

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-grid">
                    <button class="btn btn-lg btn-primary rounded-pill mt-3" type="submit">Se connecter</button>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <a href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
